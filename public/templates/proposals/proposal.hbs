<h1>Proposal</h1>
<div class="main-container">
  <div class="inner-container-column">
    <div class="proposal-detail">
      <img src="{{member.profile_image}}" alt="{{member.display_name}} image" />
      <p class="text-link" onclick="viewServiceRecord({{member.id}})">{{member.display_name}}</p>

      <h4>Tell us about your qualifications:</h4>
      <p>{{proposal.details}}</p>
    </div>
    <div class="proposal-detail">
      <h4>Your bid:</h4>
      <p>{{formattedCurrency}}</p>
    </div>
    <button type="button" class="btn btn-primary form-submit-btn" onclick="viewTask({{planit.id}}, {{taskId}});">
      Return to Task View
    </button>
    {{#if respondable}}
      <button type="button" class="btn btn-success form-submit-btn" onclick="setProposalStatus({{proposal.id}}, true);">
        Accept Proposal
      </button>
      <button type="button" class="btn btn-danger form-submit-btn upper-right-btn" onclick="setProposalStatus({{proposal.id}}, false);">
        Reject Proposal
      </button>
    {{/if}}
    {{#if deletable}}
      <button type="button" class="btn btn-danger form-submit-btn upper-right-btn" onclick="deleteProposal({{planit.id}}, {{taskId}}, {{proposal.id}});">
        Eject Proposal
      </button>
    {{/if}}
    {{#if editable}}
      <button type="button" class="btn btn-custom form-submit-btn" onclick="updateProposal({{planit.id}}, {{taskId}}, {{proposal.id}});">
        Edit Proposal
      </button>
    {{/if}}
  </div>
</div>
